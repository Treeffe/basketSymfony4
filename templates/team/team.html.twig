                                        <th scope="col" class="centrerText">taille</th>
                                        <th scope="col" class="centrerText">Equipe</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for joueur in hallOfFame %}
                                        <td scope="row" class="centrerText">
                                            <img data-src="holder.js/75x75" class="rounded-circle" alt="75x75" src="/web/{{ joueur.photo }}" data-holder-rendered="true" style="width: 75px; height: 75px;">
                                        </td>
                                        <td scope="row" class="centrerText">{{ joueur.name }} {{ joueur.lastname }} </td>
                                        <td class="centrerText">{{ joueur.bio }}</td>
                                        <td class="centrerText">kamoulox</td>
                                        <td class="centrerText">{{ joueur.numeroMaillot }} / {{ joueur.post.abrev }}</td>
                                        <td class="centrerText">{{ joueur.taille }} cm </td>
                                        <td class="centrerText">{{ joueur.team.name }} {{ joueur.team.surnom }} ( {{ joueur.team.conference.pointCardinal }} {{ joueur.team.conference.libelleConference }} )</td>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            {% else %}
                                <div class="emplacementHome">
                                    <div class="alert alert-warning">Aucun effectif trouvé.</div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

