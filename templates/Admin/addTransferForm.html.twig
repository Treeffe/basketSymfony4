{% extends 'layout.html.twig' %}

{% block body %}
    {% include 'Admin/layoutAdmin.html.twig' %}
    <div class="parent">
        <div class="enfant">
            <h2>
                Ajout d'un transfert
            </h2>
        </div>
    </div>
    <div class="well">
        <form class="form-horizontal" role="form" action="{{ path('addTransferBDD') }}" method="post" enctype="multipart/form-data">

            <!-- Categorie
            <div>
                {% if teams %}
                    <div class="form-group">
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon">Equipe </div>
                            <select class="form-control" name="teamId" size="1" >
                                {% for team in teams %}
                                    <option value={{ team.id }}>{{ team.surnom }} {{ team.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                {% else %}
                    Aucune histoire trouvée : <input type="text" name="teams" class="form-control">
                {% endif %}
            </div>

            <!-- Joueur
            <div>
                {% if teams %}
                    <div class="form-group">
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon">Equipe </div>
                            <select class="form-control" name="teamId" size="1" >
                                {% for team in teams %}
                                    <option value={{ team.id }}>{{ team.surnom }} {{ team.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                {% else %}
                    Aucune histoire trouvée : <input type="text" name="teams" class="form-control">
                {% endif %}
            </div>

            <!-- Equipe A
            <div>
                {% if teams %}
                    <div class="form-group">
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon">Equipe </div>
                            <select class="form-control" name="teamId" size="1" >
                                {% for team in teams %}
                                    <option value={{ team.id }}>{{ team.surnom }} {{ team.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                {% else %}
                    Aucune histoire trouvée : <input type="text" name="teams" class="form-control">
                {% endif %}
            </div>

            <!-- Equipe B
            <div>
                {% if teams %}
                    <div class="form-group">
                        <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                            <div class="input-group-addon">Equipe </div>
                            <select class="form-control" name="teamId" size="1">
                                {% for team in teams %}
                                    <option value={{ team.id }}>{{ team.surnom }} {{ team.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                {% else %}
                    Aucune histoire trouvée
                {% endif %}
            </div>

            <!-- Prix
            <div class="input-group">
                <div class="input-group-addon">Prix</div>
                <input type="number" class="form-control" id="inlineFormInputGroup" placeholder="Username">
            </div>

            <!-- Description
            <div class="input-group">
                <div class="input-group-addon">Description</div>
                <textarea name="description" placeholder="Info supplémentaire"></textarea>
            </div> -->

            <div class="form-group row">
                <label for="example-text-input" class="col-2 col-form-label">Categorie du Transfert</label>

            </div>
            <div class="form-group row">
                <label for="example-search-input" class="col-2 col-form-label">Equipe Acheteuse</label>
                <div>
                    {% if teams %}
                        <div class="form-group">
                            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                                <select class="form-control" name="teamId" size="1" >
                                    {% for team in teams %}
                                        <option value={{ team.id }}>{{ team.surnom }} {{ team.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    {% else %}
                        Aucune histoire trouvée : <input type="text" name="teams" class="form-control">
                    {% endif %}
                </div>
            </div>
            <div class="form-group row">
                <label for="example-email-input" class="col-2 col-form-label">Email</label>
                <div class="col-10">
                    <input class="form-control" type="email" value="bootstrap@example.com" id="example-email-input">
                </div>
            </div>
            <div class="form-group row">
                <label for="example-url-input" class="col-2 col-form-label">URL</label>
                <div class="col-10">
                    <input class="form-control" type="url" value="https://getbootstrap.com" id="example-url-input">
                </div>
            </div>
            <div class="form-group row">
                <label for="example-tel-input" class="col-2 col-form-label">Telephone</label>
                <div class="col-10">
                    <input class="form-control" type="tel" value="1-(555)-555-5555" id="example-tel-input">
                </div>
            </div>
            <div class="form-group row">
                <label for="example-password-input" class="col-2 col-form-label">Password</label>
                <div class="col-10">
                    <input class="form-control" type="password" value="hunter2" id="example-password-input">
                </div>
            </div>
            <div class="form-group row">
                <label for="example-number-input" class="col-2 col-form-label">Number</label>
                <div class="col-10">
                    <input class="form-control" type="number" value="42" id="example-number-input">
                </div>
            </div>
            <div class="form-group row">
                <label for="example-datetime-local-input" class="col-2 col-form-label">Date and time</label>
                <div class="col-10">
                    <input class="form-control" type="datetime-local" value="2011-08-19T13:45:00" id="example-datetime-local-input">
                </div>
            </div>
            <div class="form-group row">
                <label for="example-date-input" class="col-2 col-form-label">Date</label>
                <div class="col-10">
                    <input class="form-control" type="date" value="2011-08-19" id="example-date-input">
                </div>
            </div>
            <div class="form-group row">
                <label for="example-month-input" class="col-2 col-form-label">Month</label>
                <div class="col-10">
                    <input class="form-control" type="month" value="2011-08" id="example-month-input">
                </div>
            </div>
            <div class="form-group row">
                <label for="example-week-input" class="col-2 col-form-label">Week</label>
                <div class="col-10">
                    <input class="form-control" type="week" value="2011-W33" id="example-week-input">
                </div>
            </div>
            <div class="form-group row">
                <label for="example-time-input" class="col-2 col-form-label">Time</label>
                <div class="col-10">
                    <input class="form-control" type="time" value="13:45:00" id="example-time-input">
                </div>
            </div>

            <!-- Submit -->
            <div class="form-group">
                <div class="formulaire_submit">
                    <button type="submit" class="btn btn-default btn-primary formulaire_submit"><span class="glyphicon"></span>Ajouter</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}