{% extends 'layout.html.twig' %}

{% block body %}
    {% include 'Admin/layoutAdmin.html.twig' %}
    <div class="parent">
        <div class="enfant">
            <h2>
                Ajout d'un transfert
            </h2>
        </div>
    </div>

        <form class="form-horizontal" role="form" action="{{ path('addTransferBDD') }}" method="post" enctype="multipart/form-data">
            <div class="well offset-3">
            <div class="form-group row">
                <label for="example-text-input" class="col-2 col-form-label">Categorie du Transfert</label>
                <div class="col-5">
                    {% if categories %}
                        <div class="form-group">
                            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                                <select class="form-control" name="categoryId" size="1" >
                                    {% for category in categories %}
                                        <option value={{ category.id }}>{{ category.libelle }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    {% else %}
                        Aucune histoire trouvée
                    {% endif %}
                </div>
            </div>
            <div class="form-group row">
                <label for="example-search-input" class="col-2 col-form-label">Equipe Acheteuse</label>
                <div class="col-5">
                    {% if teams %}
                        <div class="form-group">
                            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                                <select class="form-control" name="teamAcheteuseId" size="1" >
                                    {% for team in teams %}
                                        <option value={{ team.id }}>{{ team.surnom }} {{ team.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    {% else %}
                        Aucune histoire trouvée : <input type="text" name="teams" class="form-control">
                    {% endif %}
                </div>
            </div>
            <div class="form-group row">
                <label for="example-email-input" class="col-2 col-form-label">Equipe vendeuse</label>
                <div class="col-5">
                    {% if teams %}
                        <div class="form-group">
                            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                                <select class="form-control" name="teamVendeuseId" size="1" >
                                    {% for team in teams %}
                                        <option value={{ team.id }}>{{ team.surnom }} {{ team.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    {% else %}
                        Aucune histoire trouvée : <input type="text" name="teams" class="form-control">
                    {% endif %}
                </div>
            </div>
            <div class="form-group row">
                <label for="example-url-input" class="col-2 col-form-label">Joueur</label>
                <div class="col-5">
                    {% if joueurs %}
                        <div class="form-group">
                            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                                <select class="form-control" name="joueurId" size="1" >
                                    {% for joueur in joueurs %}
                                        <option value={{ joueur.id }}>{{ joueur.name }} {{ joueur.lastname }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    {% else %}
                        Aucune histoire trouvée : <input type="text" name="teams" class="form-control">
                    {% endif %}
                </div>
            </div>
            <div class="form-group row">
                <label for="example-date-input" class="col-2 col-form-label">Prix</label>
                <div class="input-group col-5">
                    <input type="number" class="form-control" step="0.1" name="prix" placeholder="00.0">
                    <div class="input-group-prepend">
                        <div class="input-group-text">M d'$</div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="example-date-input" class="col-2 col-form-label">Date</label>
                <div class="col-5">
                    <input class="form-control" type="date" value="2011-08-19" name="date" id="example-date-input">
                </div>
            </div>
            </div>
            <!-- Submit -->
            <div class="form-group">
                <div class="formulaire_submit">
                    <button type="submit" class="btn btn-default btn-primary formulaire_submit"><span class="glyphicon"></span>Ajouter</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}